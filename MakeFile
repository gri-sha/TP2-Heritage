# List of source files
SRCS = application.cpp Catalogue.cpp TrajetSimple.cpp Trajet.cpp TableauDynamique.cpp TrajetCompose.cpp

# Compiler
CC = g++

# Compiler flags
CFLAGS = -ansi -pedantic -Wall -std=c++11

# Executable name
EXECUTABLE = exe

# Target: build the executable
$(EXECUTABLE): $(SRCS:.cpp=.o)
	$(CC) $(CFLAGS) $^ -o $(EXECUTABLE)

# Target: compile source files to object files
%.o: %.cpp
	$(CC) $(CFLAGS) -c $< -o $@

# Target: clean up generated files
clean:
	rm -f *.o $(EXECUTABLE)
